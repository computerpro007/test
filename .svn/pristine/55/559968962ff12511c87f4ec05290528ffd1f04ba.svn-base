<!-- CHANGE YR Modal -->
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-click="changeYearCtrl.close()"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{{changeYearCtrl.title}}</h4>
    </div>
    <div class="modal-body">
        <p>{{changeYearCtrl.message}}</p>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-success" ng-click="changeYearCtrl.changeYear()">Continue</button>
        <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="changeYearCtrl.close()">Cancel</button>
    </div>
</div>